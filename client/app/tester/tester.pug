.hbox.bg-white-only
  .col.w-md.b-r
    .wrapper-xs
      input.form-control(type='text' ng-model='$ctrl.search' placeholder='Search for API here' ng-model-options='{ debounce: 400 }')
    .wrapper-xs(ng-repeat='i in [1, 2, 3, 4, 5, 6]')
      a.text-info(ng-bind='"API " + i') Talk to me
  .col
    .col-xs
      form(ng-submit='$ctrl.userlogin()')
        .w-md.inline
          input.form-control(type='text' ng-model='$ctrl.username')
        .w-md.inline.m-l-sm
          input.form-control(type='password' ng-model='$ctrl.password')
        .w-md.inline.m-l-sm
          input.btn.btn-success(type='submit' value='login')
        .m-t-sm.m-b-sm
          .input-group
            .input-group-addon Access Token
            input.form-control(type='text' ng-model='$ctrl.token')
    .col-xs-12
      .col-xs-6
        .wrapper-xs
          form(ng-submit='$ctrl.login()')
            input.form-control(type='text' ng-model='$ctrl.username')
            input.form-control(type='password' ng-model='$ctrl.password')
            input.btn.btn-success.pull-right(type='submit' value='login')
          div
            input.form-control(type='text' ng-model='$ctrl.token')
      .col-xs-6.b-a(style='height: 500px;')
        uib-tabset(active='active')
          uib-tab(index='0', heading='Preview')
            textarea.form-control(ng-model='$ctrl.jsonData' style='height: 430px;overflow: auto;resize:none;')
          uib-tab(index='1' heading='Response')
            json-formatter(json="$ctrl.jsonData" open="2")
          uib-tab.hidden(index='1' heading='Local Storage')





